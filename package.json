{
  "name": "@dekzer/kissfft",
  "version": "0.1.0",
  "description": "WebAssembly-compiled KISS FFT library with TypeScript bindings",
  "keywords": [
    "fft",
    "webassembly",
    "dsp",
    "signal processing",
    "kissfft"
  ],
  "type": "module",
  "homepage": "https://github.com/dekzer-oss/kissfft#readme",
  "bugs": {
    "url": "https://github.com/dekzer-oss/kissfft/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dekzer-oss/kissfft.git"
  },
  "main": "./dist/kissfft.es.js",
  "module": "./dist/kissfft.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/kissfft.es.js"
    },
    "./browser": {
      "types": "./dist/loader.browser.d.ts",
      "import": "./dist/loader.browser.js"
    },
    "./node": {
      "types": "./dist/loader.node.d.ts",
      "import": "./dist/loader.node.js"
    }
  },
  "typesVersions": {
    "*": {
      "browser": ["dist/loader.browser.d.ts"],
      "node": ["dist/loader.node.d.ts"]
    }
  },
  "files": [
    "dist/**",
    "build/kissfft-wasm*.{js,wasm}",
    "README.md",
    "LICENSE",
    "NOTICE",
    "THIRD_PARTY_LICENSES/**"
  ],
  "sideEffects": false,
  "unpkg": "dist/kissfft.umd.js",
  "jsdelivr": "dist/kissfft.umd.js",
  "publishConfig": { "access": "public" },
  "engines": { "node": ">=18.17" },
  "scripts": {
    "clean": "rimraf dist build/kissfft-wasm*.{js,wasm}",
    "clean:wasm": "rimraf build/kissfft-wasm*.{js,wasm}",
    "pretest": "pnpm run build:wasm:both || true",
    "test:node": "vitest run --project=node",
    "test:browser": "vitest run --project=browser",
    "test": "vitest run --reporter=verbose",
    "bench": "vitest bench",
    "format": "prettier --write .",
    "prebuild": "pnpm run build:wasm:both",
    "build:wasm:both": "node emcripten/build.mjs --both",
    "build:wasm:simd": "node emcripten/build.mjs --simd",
    "build:wasm:scalar": "node emcripten/build.mjs --scalar",
    "build": "vite build -c vite.es.config.ts && vite build -c vite.node.config.ts && vite build -c vite.umd.config.ts && rollup -c rollup.types.config.mjs && rimraf dist/types"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "@vitest/browser": "^3.2.4",
    "eslint": "^9.31.0",
    "playwright": "^1.54.1",
    "prettier": "^4.0.0-alpha.12",
    "rollup": "^4.52.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.2.1",
    "typescript": "^5.8.3",
    "vite": "7.1.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
