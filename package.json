{
  "name": "@dekzer/kissfft",
  "version": "0.1.0",
  "description": "WebAssembly-compiled KISS FFT library with TypeScript bindings",
  "keywords": [
    "fft",
    "webassembly",
    "dsp",
    "signal processing",
    "kissfft"
  ],
  "type": "module",
  "homepage": "https://github.com/dekzer-oss/kissfft#readme",
  "bugs": {
    "url": "https://github.com/dekzer-oss/kissfft/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dekzer-oss/kissfft.git"
  },
  "main": "./dist/kissfft.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/kissfft.es.js"
    },
    "./loader.browser": {
      "types": "./dist/types/loader.browser.d.ts",
      "import": "./dist/loader.browser.js"
    },
    "./loader.node": {
      "types": "./dist/types/loader.node.d.ts",
      "import": "./dist/loader.node.js",
      "require": "./dist/loader.node.js"
    }
  },
  "license": "MIT AND BSD-3-Clause",
  "files": [
    "dist/",
    "build/",
    "LICENSE",
    "NOTICE",
    "UPSTREAM.md",
    "THIRD_PARTY_LICENSES/**"
  ],
  "scripts": {
    "prebuild": "bash scripts/build-wasm.sh",
    "build": "vite build -c vite.es.config.ts && vite build -c vite.umd.config.ts",
    "prepack": "pnpm run build",
    "build:wasm:simd": "jq '.useSimd = true' src/wasm/wasm.config.json > tmp && mv tmp src/wasm/wasm.config.json && bash scripts/build-wasm.sh",
    "build:wasm:scalar": "jq '.useSimd = false' src/wasm/wasm.config.json > tmp && mv tmp src/wasm/wasm.config.json && bash scripts/build-wasm.sh",
    "dev": "vitest --watch",
    "prepare": "pnpm build",
    "test": "vitest run --reporter=verbose",
    "bench": "vitest bench",
    "format": "prettier --write .",
    "test:node": "vitest run --project=node",
    "test:browser": "vitest run --project=browser"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "@vitest/browser": "^3.2.4",
    "eslint": "^9.31.0",
    "playwright": "^1.54.1",
    "prettier": "^4.0.0-alpha.12",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.2.1",
    "typescript": "^5.8.3",
    "vite": "7.1.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
